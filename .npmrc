# NPM Configuration for Vercel Deployment

# Use npm registry
registry=https://registry.npmjs.org/

shamefully-hoist = true
auto-install-peers = true

# Increase network timeout
fetch-timeout=60000
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Enable legacy peer deps to avoid conflicts

# Disable strict SSL for corporate proxies (if needed)
# strict-ssl=false

# Enable progress for better visibility
progress=true

# Disable audit during install for faster builds
audit=false

# Disable fund messages
fund=false
